@page
@model Dashboardscrum.Pages.RegisterModel
@{
    ViewData["Title"] = "Registreer";
}

@if(Model.isDocent){

    <div class="container">
        <div class="row">
            <div class="col">
                <div asp-validation-summary="ModelOnly"></div>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="RegisterUser.UserName"></label>
                        <input asp-for="RegisterUser.UserName" type="text" class="form-control" id="username" aria-label="username" aria-describedby="basic-addon1" placeholder="Enter username">
                        <span asp-validation-for="RegisterUser.UserName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegisterUser.Password"></label>
                        <input asp-for="RegisterUser.Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                        <span asp-validation-for="RegisterUser.Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegisterUser.Email"></label>
                        <input asp-for="RegisterUser.Email" type="text" class="form-control" placeholder="some@email.com">
                        <span asp-validation-for="RegisterUser.Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegisterUser!.Gebruikerrol"></label>
                        <select name="GebruikerRole" asp-for="RegisterUser!.Gebruikerrol">
                            <option value="1">Student</option>
                            <option value="2">Docent</option>
                        </select>

                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
}