@page
@model Dashboardscrum.Pages.Docent.VoegTeamToeModel
@using Dashboardscrum.Repositories;
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Dashboardscrum.Models;
@inject UserRepository _userRepository
@{
    var loggedIn = _userRepository.IsUserLoggedIn();
}


@if (Model.isDocent == true)
{
@if (loggedIn)
{
    <div class="container">
                <form method="post" class="row">
                        <label asp-for="Team!.Name"></label>
                        <input asp-for="Team!.Name" type="text" class="form-control" placeholder="Voer Teamnaam in">
                        <input type="hidden" asp-for="Team.Hulp" value="0" />
                    <div class="col row align-items-center">
                        <button type="submit" asp-page-handler="AddTeam" class="btn btn-primary">Voeg team toe</button>
                    </div>
                    <div class="col row align-items-center">
                         <a href="https://localhost:44362/Docent/TeamsOverzicht" button type="submit" class="btn btn-secondary">Ga terug</a>
                    </div>      
                </form>
    </div>

}
}